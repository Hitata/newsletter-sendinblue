<p>Hello and welcome to Hot Jobs! For awesomeness, follow the instructions below:</p>
<ol>
  <li>Add the job IDs you wanna include in the email</li>
  <li>Click "Get Info" and modify the data (job title etc) if needed</li>
  <li>Finally, click "Generate" and you'll have the email!</li>
</ol>
<% if flash[:alert] %>
  <p style="color: red"><%= flash[:alert] %></p>
<% end %>
<%= form_tag '/get_info' do %>
  <table>
    <thead>
      <tr>
        <th>Engineering &amp; Design</th>
        <th>Business &amp; Marketing</th>
      </tr>
    </thead>
    <tbody>
      <% for i in 0..2 %>
        <tr>
          <td><%= i + 1 %>. <input name="engineering[]" value="<%= params[:engineering][i] %>"/></td>
          <td><%= i + 1 %>. <input name="business[]" value="<%= params[:business][i] %>"/></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <input type="submit" value="Get Info (English)" name="commit" />
  <input type="submit" value="Get Info (Japanese)" name="commit" />
<% end %>
<%= form_tag '/generate' do %>
  <input type="hidden" name="lang" value="<%= @lang %>" />
  <table>
    <thead>
      <tr>
        <th>Engineering &amp; Design</th>
        <th>Business &amp; Marketing</th>
      </tr>
    </thead>
    <tbody>
      <% for i in 0..2 %>
        <tr>
          <td>
            <%= i + 1 %>.
            <input name="engineering[][title]" value="<%= @engineering[i][:title] %>" size="30" />
            <input name="engineering[][company]" value="<%= @engineering[i][:company] %>"/>
            <input type="hidden" name="engineering[][id]" value="<%= @engineering[i][:id] %>"/>
            <input type="hidden" name="engineering[][lang]" value="<%= @engineering[i][:lang] %>"/>
            <input type="hidden" name="engineering[][logo]" value="<%= @engineering[i][:logo] %>"/>
          </td>
          <td>
            <%= i + 1 %>.
            <input name="business[][title]" value="<%= @business[i][:title] %>" size="30" />
            <input name="business[][company]" value="<%= @business[i][:company] %>"/>
            <input type="hidden" name="business[][id]" value="<%= @business[i][:id] %>"/>
            <input type="hidden" name="business[][lang]" value="<%= @business[i][:lang] %>"/>
            <input type="hidden" name="business[][logo]" value="<%= @business[i][:logo] %>"/>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <table>
    <thead>
      <tr><th>Event Details</th></tr>
    </thead>
    <tbody>
      <tr>
        <td>Title (including date):</td><td><input name="event_title" size="30" /></td>
      </tr>
      <tr>
        <td>URL (for details and RSVP):</td><td><input name="event_url" size="30" /></td>
      </tr>
      <tr>
        <td>Address:</td><td><input name="event_address" size="30" /></td>
      </tr>
      <tr>
        <td>Map URL:</td><td><input name="event_map" size="30" /></td>
      </tr>
      <tr>
        <td>Image (URL):</td><td><input name="event_image" size="30" /></td>
      </tr>
      <tr>
        <td>Date &amp; Time:</td><td><input name="event_date" size="30" /></td>
      </tr>
      <tr>
        <td style="vertical-align: top">Description:</td><td><textarea name="event_description" cols="70" rows="5"></textarea></td>
      </tr>
    </tbody>
  </table>
  <input type="submit" value="Generate" />
<% end %>
